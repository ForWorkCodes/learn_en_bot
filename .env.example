# Скопируйте этот файл в .env и заполните значения

TELEGRAM_BOT_TOKEN=
GEMINI_API_KEY=

# Text-to-Speech preferences
# Whether Gemini may fall back to other providers: true/false
TTS_PREFER_GEMINI=true
# Enforce Gemini-only synthesis without fallbacks
TTS_STRICT_GEMINI=false

# По умолчанию локальная SQLite БД
DATABASE_URL=sqlite:///learn_en.db

# Расписание: cron-выражение для ежедневной рассылки
# Пример: каждый день в 10:00
SCHEDULE_CRON=0 10 * * *

# Локаль и таймзона планировщика
TZ=Europe/Moscow
